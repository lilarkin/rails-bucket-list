<%= form_for [@bucketlist, @listitem] do |f| %>
  <div class='field'>
    <div class=''>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class=''>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class=''>
      <%= f.label :complete %>
      <%= f.check_box :complete %>
    </div>
  </div>
  
  <%= f.submit 'Submit', class: 'btn'%>
<% end %>